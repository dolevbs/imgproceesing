<Window x:Class="Grayscale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">

  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="File">
        <MenuItem Header="_LoadImage" Click="Browse_OnClick" />
        <MenuItem Header="_Exit" Click="Exit_Click" />
      </MenuItem>
      <MenuItem Header="GrayScale algorithms">
        <MenuItem Header="_HistogramEqualization" Click="HistogramEqualization_Click" />
        <MenuItem Header="_Filter" Click="Filter_Click" />
      </MenuItem>
      <MenuItem Header="Black and white algorithms">
        <MenuItem Header="_Erosion" />
        <MenuItem Header="_Dilation" />
        <MenuItem Header="_Opening" />
        <MenuItem Header="_Closing" />
      </MenuItem>
    </Menu>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>

      <Image Name="OriginalImage" Grid.Row="0" Grid.Column="0" />
      <Image Name="OutputImage" Grid.Row="0" Grid.Column="1" />

    </Grid>
  </DockPanel>
</Window>